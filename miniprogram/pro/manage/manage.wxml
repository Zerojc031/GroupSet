<view>
	<view class="view-title">高级管理界面</view>
	<button class="button-check" bindtap="check">更新</button>
	<view>
		<view id="{{index}}" wx:for="{{arr}}" data-id="{{index}}" data-value="{{item._openid}}" class="view-items">
			<text>{{item.name}} {{item.tag}} {{item.province}}\n</text>
			<text>wxid:{{item.wechatID}}\n</text>
			<!-- <text>openid:{{item._openid}}</text> -->
			<text>src:{{item.isShowQRCode}} times:{{item.times}}</text>
			<view>
				<button class="button-showAndHide" id="{{index}}" wx:if="{{control.uniList[index].isOnShow==true}}" bindtap="hide">撤下</button>
				<button class="button-showAndHide" id="{{index}}" wx:else bindtap="show">发布</button>
			</view>
		</view>
